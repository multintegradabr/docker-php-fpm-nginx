# Laravel Scheduler
* * * * * if [[ -e "/etc/environment" ]]; then . /etc/environment && php /var/www/artisan schedule:run >> /home/LogFiles/Laravel-Scheduler.log 2>&1; else php /var/www/artisan schedule:run >> /home/LogFiles/Laravel-Scheduler.log 2>&1; fi
0 0 * * 0 apt autoremove && apt autoclean >> /home/LogFiles/OS-Updates.log 2>&1
30 0 * * * /usr/bin/composer self-update >> /home/LogFiles/Composer-Updates.log 2>&1
# Update SSL Certificates for nginx
00 20 * * 1 /home/site/run.d/update-ssl-cert.sh >> /home/LogFiles/RenewSSL.log 2>&1
